@page
@model CorsoLaneWeb.Pages.AdminControllerPage.Product_EntityControll.IndexModel

@{
    ViewData["Title"] = "All Products";
}

<head>
    <link rel="stylesheet" href="~/css/IndexProduct.css" />
    <style>
      
    </style>
</head>

<div class="products-container">
    <div class="products-card">
        <h2>All Products</h2>

        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Size</th>
                    <th>Color</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>SubCategory</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Products != null && Model.Products.Any())
                {
                    int i = 1;
                    foreach (var product in Model.Products)
                    {
                        <tr>
                            <td>@i</td>
                            <td>
                                @if (!string.IsNullOrEmpty(product.ImagePath))
                                {
                                    <img src="~/uploads/@product.ImagePath" alt="@product.Name" class="product-image" />
                                }
                                else
                                {
                                    <span>No Image</span>
                                }
                            </td>
                            <td>@product.Name</td>
                            <td>@product.Description</td>
                            <td>@product.Size</td>
                            <td>@product.Color</td>
                            <td>@product.Price.ToString("C")</td>
                            <td>@product.StockQuantity</td>
                            <td>@Model.SubCategoryMap.GetValueOrDefault(product.SubCategoryId, "Unknown")</td>
                            <td>
                                <a asp-page="./EditProductEntity" asp-route-id="@product.Id" class="btn-action btn-edit">Edit</a>
                                <a asp-page="./DeleteProductEntity" asp-route-id="@product.Id" class="btn-action btn-delete">Delete</a>
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="10" style="text-align:center;">No products found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
