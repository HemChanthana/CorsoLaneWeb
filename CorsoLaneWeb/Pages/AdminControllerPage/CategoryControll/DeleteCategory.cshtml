

@page "{id:int}"
@model CorsoLaneWeb.Pages.AdminControllerPage.CategoryControll.DeleteCategoryModel
@{
    ViewData["Title"] = "Delete Category";
}

<head>
    <link rel="stylesheet" href="~/css/deleteCategoryStyling.css" />
</head>

<div class="row justify-content-center delete-container">
    <div class="col-md-6">
        <section class="section">
            <h2>Delete Category</h2>
            <hr />

            <div class="delete-box">
                <p>
                    Are you sure you want to delete 
                    <strong>@Model.Category.Name</strong>?
                </p>

                <form method="post">
                    <div class="btn-group">
                        <button type="submit" class="btn btn-dark btn-lg confirm-btn">
                            Yes, Delete
                        </button>
                        <a asp-page="/Index" class="btn btn-outline-dark btn-lg cancel-btn">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

