@page
@model CorsoLaneWeb.Pages.AdminControllerPage.CategoryControll.IndexModel

@{
    ViewData["Title"] = "Category List";
}

<head>
    <link rel="stylesheet" href="~/css/IndexCategory.css" />
    <style>
      
    </style>
</head>

<div class="category-container">
    <div class="category-card">
        <h3>Category List</h3>
        <a class="btn-create" asp-page="/Category/Create">Create New Category</a>

        @if (Model.Categories != null && Model.Categories.Any())
        {
            <table>
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Category</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 0;
                        foreach (var item in Model.Categories)
                        {
                            <tr>
                                <td>@(++i)</td>
                                <td>@item.Name</td>
                                <td>
                                    <a class="btn-action btn-edit"
                                       asp-page="/AdminControllerPage/CategoryControll/EditCategory"
                                       asp-route-id="@item.Id">Edit</a>
                                    <a class="btn-action btn-delete"
                                       asp-page="/AdminControllerPage/CategoryControll/DeleteCategory"
                                       asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>No</th>
                        <th>Category</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
            </table>
        }
        else
        {
            <p class="text-center mt-3">No categories found.</p>
        }
    </div>
</div>
