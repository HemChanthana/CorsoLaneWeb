@model IEnumerable<CorsoLaneWeb.Models.user>

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card p-4 mb-5" style="border-radius:12px; box-shadow: 0 4px 20px rgba(0,0,0,0.1);">
            <h3 class="text-center mb-4">Customer List</h3>

            @if (Model != null && Model.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr style="background-color:#831900; color:white;">
                            <th>No</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 0;
                            foreach (var customer in Model)
                            {
                                <tr>
                                    <td>@(++i)</td>
                                    <td>@customer.user_fullname</td>
                                    <td>@customer.Email</td>
                                    <td>@customer.PhoneNumber</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-center mt-3">No customers found.</p>
            }
        </div>
    </div>
</div>
