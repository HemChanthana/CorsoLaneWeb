@page
@model CorsoLaneWeb.Pages.AdminControllerPage.Sub_CategoryEntiity.DeleteSub_CategoryModel
@{
    ViewData["Title"] = "Delete SubCategory";
}

<head>
    <link rel="stylesheet" href="~/css/DeleteSubCategory.css" />
    <style>
        
    </style>
</head>

<div class="delete-container">
    <div class="delete-card">
        <h2>Delete SubCategory</h2>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert-message">@Model.Message</div>
            <a asp-page="./Index1" class="btn-cancel">Back to List</a>
        }
        else if (Model.SubCategory != null)
        {
            <p>Are you sure you want to delete this SubCategory?</p>
            <p><strong>@Model.SubCategory.Name</strong></p>

            <form method="post">
                <button type="submit" asp-route-id="@Model.SubCategory.Id" class="btn-delete">Yes, Delete</button>
                <a asp-page="./Index1" class="btn-cancel">Cancel</a>
            </form>
        }
    </div>
</div>
