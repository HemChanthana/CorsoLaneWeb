@page
@model CorsoLaneWeb.Pages.AdminControllerPage.DashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f4f4f9; /* Dashboard background */
        }

        /* Sidebar */
        .sidebar {
            width: 280px;
            height: 100vh;
            background-color: #1c1c1c;
        }

            .sidebar a {
                color: #fff;
                text-decoration: none;
                padding: 10px 15px;
                display: block;
                border-radius: 5px;
                margin-bottom: 5px;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    background-color: #83190;
                    color: #fff;
                }

        .main-content {
            flex-grow: 1;
            padding: 30px;
        }

        /* Table Styling */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #fff;
            border-radius: 8px;
            overflow: hidden;
        }

            table th, table td {
                padding: 12px 15px;
                text-align: left;
            }

            table th {
                background-color: #83190;
                color: #fff;
            }

            table tr:nth-child(even) {
                background-color: #f8f8f8;
            }

            table tr:hover {
                background-color: #ffd699;
            }

        h1 {
            color: #1c1c1c;
        }
    </style>
</head>

<body>
    <main class="d-flex">
        <!-- Sidebar -->
        <div class="d-flex flex-column p-3 sidebar">
            <a href="/" class="fs-4 mb-3 text-white text-decoration-none">Dashboard</a>
            <hr />
            <ul class="nav nav-pills flex-column mb-auto">
                <li><a href="#products" class="nav-link" id="menuProducts">Products</a></li>
                <li><a href="#orders" class="nav-link" id="menuOrders">Orders</a></li>
                <li><a href="#customers" class="nav-link" id="menuCustomers">Customers</a></li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="main-content" id="mainContent">
            <h1>Welcome to Admin Dashboard</h1>
            <p>Select a category from the sidebar to view details.</p>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function loadPartial(handler) {
            const res = await fetch(`/AdminControllerPage/Dashboard?handler=${handler}`);
            const html = await res.text();
            document.getElementById('mainContent').innerHTML = html;
        }

        document.getElementById('menuProducts').addEventListener('click', e => {
            e.preventDefault();
            loadPartial('ProductList');
        });

        document.getElementById('menuOrders').addEventListener('click', e => {
            e.preventDefault();
            loadPartial('OrdersPartial');
        });

        document.getElementById('menuCustomers').addEventListener('click', e => {
            e.preventDefault();
            loadPartial('CustomerList');
        });
    </script>
</body>
