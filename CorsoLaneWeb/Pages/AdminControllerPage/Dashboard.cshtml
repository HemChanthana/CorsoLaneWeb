@page
@model CorsoLaneWeb.Pages.AdminControllerPage.DashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/dashboard.css" />
</head>

<body>
    <main class="d-flex">
        <!-- Sidebar -->
        <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="width: 280px; height: 100vh;">
            <a href="/" class="d-flex align-items-center mb-3 text-white text-decoration-none">
                <span class="fs-4">Dashboard</span>
            </a>
            <hr />
            <ul class="nav nav-pills flex-column mb-auto">
                <li><a href="#products" class="nav-link text-white" id="menuProducts">Products</a></li>
                <li><a href="#orders" class="nav-link text-white" id="menuOrders">Orders</a></li>
                <li><a href="#customers" class="nav-link text-white" id="menuCustomers">Customers</a></li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="flex-grow-1 p-4" id="mainContent">
            <h1>Welcome to the Admin Dashboard</h1>
            <p>Click on the sidebar items to load data dynamically.</p>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function loadPartial(handler) {
            const res = await fetch(`/AdminControllerPage/Dashboard?handler=${handler}`);
            const html = await res.text();
            document.getElementById('mainContent').innerHTML = html;
        }

        document.getElementById('menuProducts').addEventListener('click', e => {
            e.preventDefault();
            loadPartial('_ProductList');
        });

        document.getElementById('menuOrders').addEventListener('click', e => {
            e.preventDefault();
            loadPartial('OrdersPartial');
        });

        document.getElementById('menuCustomers').addEventListener('click', e => {
            e.preventDefault();
            loadPartial('CustomersPartial');
        });
    </script>
</body>