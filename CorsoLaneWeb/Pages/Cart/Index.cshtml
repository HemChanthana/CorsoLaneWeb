@* Pages/Cart/Index.cshtml *@
@page
@model IndexModel

<div class="container">
    <h2>Shopping Cart</h2>

    @if (!Model.CartItems.Any())
    {
        <p>Your cart is empty</p>
        <a href="/Products" class="btn btn-primary">Continue Shopping</a>
    }
    else
    {
        <form method="post">
            <div class="row">
                <div class="col-md-8">
                    @foreach (var item in Model.CartItems)
                    {
                        <div class="card mb-3">
                            <div class="row g-0">
                                <div class="col-md-3">
                                    <img src="/images/products/@item.Product?.ImagePath"
                                         class="img-fluid" alt="@item.Product?.Name">
                                </div>
                                <div class="col-md-9">
                                    <div class="card-body">
                                        <h5 class="card-title">@item.Product?.Name</h5>
                                        <p class="card-text">Size: @item.Product?.Size</p>
                                        <p class="card-text">Color: @item.Product?.Color</p>
                                        <p class="price">$@item.Product?.Price × @item.Quantity</p>
                                        <div class="quantity-controls">
                                            <button type="submit"
                                                    asp-page-handler="UpdateQuantity"
                                                    asp-route-itemId="@item.Id"
                                                    asp-route-quantity="@(item.Quantity - 1)"
                                                    class="btn btn-sm btn-outline-secondary">
                                                -
                                            </button>
                                            <span class="mx-2">@item.Quantity</span>
                                            <button type="submit"
                                                    asp-page-handler="UpdateQuantity"
                                                    asp-route-itemId="@item.Id"
                                                    asp-route-quantity="@(item.Quantity + 1)"
                                                    class="btn btn-sm btn-outline-secondary">
                                                +
                                            </button>
                                            <button type="submit"
                                                    asp-page-handler="RemoveItem"
                                                    asp-route-itemId="@item.Id"
                                                    class="btn btn-sm btn-danger ms-2">
                                                Remove
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Order Summary</h5>
                            <p class="card-text">Total: $@Model.Total</p>
                            <a href="/Checkout" class="btn btn-success w-100">Proceed to Checkout</a>
                            <a href="/Products" class="btn btn-outline-primary w-100 mt-2">
                                Continue Shopping
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    }
</div>