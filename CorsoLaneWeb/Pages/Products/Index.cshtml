@page
@model CorsoLaneWeb.Pages.Products.IndexModel
@{
    ViewData["Title"] = "All Products";
}

<div class="container mt-4">
    <h1>All Products</h1>

    <!-- Filter Options -->
    <div class="row mb-4">
        <div class="col-md-6">
            <form method="get" class="d-flex">
                <input type="text" name="search" class="form-control me-2" placeholder="Search products..." value="@Model.SearchTerm">
                <button type="submit" class="btn btn-outline-primary">Search</button>
            </form>
        </div>
        <div class="col-md-6 text-end">
            <div class="btn-group">
                <a href="?filter=all" class="btn @(Model.Filter == "all" ? "btn-primary" : "btn-outline-primary")">All</a>
                <a href="?filter=new" class="btn @(Model.Filter == "new" ? "btn-primary" : "btn-outline-primary")">New Arrivals</a>
                <a href="?filter=popular" class="btn @(Model.Filter == "popular" ? "btn-primary" : "btn-outline-primary")">Best Sellers</a>
            </div>
        </div>
    </div>

    <!-- Products Grid -->
    <div class="row">
        @foreach (var product in Model.Products)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 product-card">
                    @if (!string.IsNullOrEmpty(product.ImagePath))
                    {
                        <img src="/uploads/@product.ImagePath" class="card-img-top" alt="@product.Name"
                             style="height: 250px; object-fit: cover;">
                    }
                    else
                    {
                        <img src="/images/placeholder.jpg" class="card-img-top" alt="No image"
                             style="height: 250px; object-fit: cover;">
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted">@product.Description</p>
                        <div class="mt-auto">
                            <p class="card-text">
                                <small class="text-muted">
                                    Size: @product.Size | Color: @product.Color<br>
                                    <strong class="text-primary">$@product.Price.ToString("F2")</strong>
                                </small>
                            </p>

                            <form method="post" asp-page-handler="AddToCart">
                                <input type="hidden" name="productId" value="@product.Id" />
                                <input type="hidden" name="quantity" value="1" />
                                <button type="submit" class="btn btn-primary w-100"
                                        @(product.StockQuantity == 0 ? "disabled" : "")>
                                    @(product.StockQuantity == 0 ? "Out of Stock" : "Add to Cart")
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Products.Any())
    {
        <div class="alert alert-info text-center">
            No products found. <a href="/Products">View all products</a>
        </div>
    }
</div>