
@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/IndexStyling.css" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>

    </style>
</head>
<body>
    <section class="hero-section">
        <div class="hero-content">
            <h1>Everyday Motion.<br>Elevated.</h1>
            <p>Premium footwear and apparel crafted for modern living</p>
            <div class="hero-buttons">
                <button class="btn-custom btn-dark-custom">Shop Men</button>
                <button class="btn-custom btn-light-custom">Shop Women</button>
            </div>
        </div>
    </section>

    <section class="features-bar">
        <div class="features-container">
            <div class="feature-item">
                <div class="feature-icon">
                    <i class="fas fa-shipping-fast"></i>
                </div>
                <div class="feature-title">Free Shipping</div>
                <div class="feature-desc">On orders over $100</div>
            </div>
            <div class="feature-item">
                <div class="feature-icon">
                    <i class="fas fa-sync-alt"></i>
                </div>
                <div class="feature-title">Easy Returns</div>
                <div class="feature-desc">30-day return policy</div>
            </div>
            <div class="feature-item">
                <div class="feature-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <div class="feature-title">Secure Payment</div>
                <div class="feature-desc">100% secure transactions</div>
            </div>
            <div class="feature-item">
                <div class="feature-icon">
                    <i class="fas fa-headset"></i>
                </div>
                <div class="feature-title">24/7 Support</div>
                <div class="feature-desc">Dedicated customer service</div>
            </div>
        </div>
    </section>

    <section class="split-section">
        <div class="split-item">
            <img src="~/Images/Main1Img.jpg" alt="Men's Collection" />
            <div class="split-overlay">
                <div class="split-text">
                    <h2>Men's Collection</h2>
                    <button class="btn-custom">Explore</button>
                </div>
            </div>
        </div>
        <div class="split-item">
            <img src="/images/Salomon2.jpg" alt="Women's Collection" />
            <div class="split-overlay">
                <div class="split-text">
                    <h2>Women's Collection</h2>
                    <button class="btn-custom">Explore</button>
                </div>
            </div>
        </div>
    </section>


    <section class="featured-section">
        <div class="section-header">
            <h2 class="section-title">Featured Products</h2>
            <p class="section-subtitle">Timeless designs, exceptional quality</p>
        </div>
       <div class="product-grid">
          @if (Model.Products != null && Model.Products.Any())
        {
            var products = Model.Products.Take(5).ToList();
            for (int i = 0; i < products.Count; i++)
            {
                <div class="product-card">
                    <div class="product-image-wrapper">
                        <img src="~/uploads/@products[i].ImagePath" alt="@products[i].Description"  />
                    </div>
                    <div class="product-info">
                        <div class="product-name">@products[i].Name</div>
                        <div class="product-price">$@products[i].Price</div>
                    </div>
                </div>
            }

            }
            else
            {
                <div class="no-products">
                    <p>No products available right now. Please check back later!</p>
                </div>
            }
        </div>
       
       
        
    </section>

    <section class="testimonial-section">
        <div class="testimonial-content">
            <div class="stars">★★★★★</div>
            <p class="testimonial-text">"Supportive enough for long days. Comfortable enough for any setting."</p>
            <p class="testimonial-author">— Chanthana HEM.</p>
        </div>
    </section>

    <section class="footer-cta">
        <div class="footer-cta-content">
            <h2>Join Our Community</h2>
            <p>Be the first to know about new releases and exclusive offers</p>
            
            <h3>Contact Us</h3>
            
            <div class="contact-info">
                <a href="https://t.me/+85570545990" class="contact-item" target="_blank">
                    <i class="fab fa-telegram contact-icon"></i>
                    <span class="contact-text">Telegram</span>
                </a>
                <a href="tel:+85570545990" class="contact-item">
                    <i class="fas fa-phone contact-icon"></i>
                    <span class="contact-text">+855 70 545 990</span>
                </a>
                <a href="https://wa.me/85570545990" class="contact-item" target="_blank">
                    <i class="fab fa-whatsapp contact-icon"></i>
                    <span class="contact-text">WhatsApp</span>
                </a>
            </div>

            <div class="social-links">
                <a href="#" class="social-link" title="Facebook">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="#" class="social-link" title="Instagram">
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="#" class="social-link" title="Twitter">
                    <i class="fab fa-twitter"></i>
                </a>
                <a href="https://t.me/+85570545990" class="social-link" title="Telegram" target="_blank">
                    <i class="fab fa-telegram"></i>
                </a>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>